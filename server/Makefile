SRC_SR	=	./src/IAUnit.cpp 				\
		./src/HumainUnit.cpp				\
		./src/BasicWeapon.cpp				\
		./src/LifePowerUp.cpp				\
		./src/MovingObstacle.cpp			\
		./src/Obstacle.cpp				\
		./src/Player.cpp				\
		./src/RectangleCollisionDefinition.cpp		\
		./src/Unit.cpp					\
		./src/Game.cpp					\
		./src/Bullet.cpp				\
		./src/CommandManager.cpp			\
		./Abs_Socket/UServerSocket.cpp			\
		./Abs_Socket/USocket.cpp			\
		./Abs_Socket/main.cpp				\
		./Abs_Thread_mutex/UMutex.cpp			\
		./Abs_Thread_mutex/UThread.cpp

NAME_SR =	server

OBJ_SR	=	$(SRC_SR:.cpp=.o)

CXXFLAGS=	-W -Wall -Wextra -g

CC	=	g++

LIB	=	-lpthread

all		:	$(NAME_SR)

$(NAME_SR)	:	$(OBJ_SR)
			$(CC) $(OBJ_SR) -o $(NAME_SR) $(LIB)

clean		:
			rm -f $(OBJ_SR)

fclean		:	clean
			rm -f $(NAME_SR)

re		:	fclean all
